<body>
  <div class="box">
    <h2>Kalkulator Untung/Rugi</h2>
    <input id="jual" type="number" placeholder="Total Penjualan (Rp)">
    <input id="beli" type="number" placeholder="Total Modal (Rp)">
    <button onclick="hitung()">Hitung</button>
    <p id="hasil">Masukkan data dulu ya...</p>
  </div>

  <script>
    function hitung() {
      const jual = parseFloat(document.getElementById('jual').value);
      const beli = parseFloat(document.getElementById('beli').value);
      const hasil = document.getElementById('hasil');
      if (isNaN(jual) || isNaN(beli)) {
        hasil.textContent = "âš ï¸ Masukkan angka valid!";
        hasil.style.color = "red";
        return;
      }
      const selisih = jual - beli;
      if (selisih > 0) {
        hasil.textContent = `ðŸ’° Untung Rp ${selisih.toLocaleString('id-ID')}`;
        hasil.style.color = "green";
      } else if (selisih < 0) {
        hasil.textContent = `ðŸ“‰ Rugi Rp ${Math.abs(selisih).toLocaleString('id-ID')}`;
        hasil.style.color = "red";
      } else {
        hasil.textContent = "âš–ï¸ Impas / Break Even";
        hasil.style.color = "black";
      }
    }
  </script>
</body>
